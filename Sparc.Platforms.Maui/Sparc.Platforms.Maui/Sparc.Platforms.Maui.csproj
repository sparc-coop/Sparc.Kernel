<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFrameworks>net6.0-ios;net6.0-android</TargetFrameworks>
		<Version>6.0.5-rc.14.4</Version>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>

		<Authors>Sparc Cooperative</Authors>
		<Company>Sparc Cooperative</Company>
		<Description>MAUI Sparc package</Description>
		<PackageIcon>icon.png</PackageIcon>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageTags>MAUI;Mobile;Sparc</PackageTags>
		<PackageProjectUrl>https://github.com/sparc-coop/Sparc.Kernel</PackageProjectUrl>
		<RepositoryUrl>https://github.com/sparc-coop/Sparc.Kernel</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>

	<ItemGroup>
		<None Include="Files\readme.md" Pack="true" PackagePath="\" />
		<None Include="Files\icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="IdentityModel.OidcClient" Version="4.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="6.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
		<PackageReference Include="Microsoft.Identity.Client" Version="4.41.0" />
	</ItemGroup>

	<ItemGroup Condition="$(TargetFramework.Contains('android'))">
		<PackageReference Include="Xamarin.Firebase.Messaging" Version="122.0.0" />
		<PackageReference Include="Xamarin.Google.Dagger" Version="2.39.1" />
		<PackageReference Include="Xamarin.GooglePlayServices.Base" Version="117.6.0" />
	</ItemGroup>
	
	<ItemGroup>
	  <ProjectReference Include="..\..\Sparc.UI\Sparc.UI.csproj" />
	</ItemGroup>
</Project>
