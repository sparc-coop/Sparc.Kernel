@*@inherits ModalModel*@

<div class="blossom-modal @(ShowModal ? "show" : "")">
    @ChildContent
    <div class="bm-buttons">
        <button @onclick="Cancel" class="bm-cancel">Cancel</button>
        @*<button @onclick="CloseModal" class="modal-close">Close</button>*@
        <button @onclick="Confirm" class="bm-confirm">Confirm</button>
    </div>
    <svg @onclick="Cancel" class="bm-close" focusable="false" aria-hidden="true" width=24 height=24 viewBox="0 0 24 24" data-testid="CloseIcon"><path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path></svg>
</div>
<div class="blossom-modal--overlay @(ShowModal ? "show" : "")"></div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool ShowModal { get; set; } = false;
    [Parameter] public EventCallback<bool> CloseModal { get; set; }

    async void Confirm()
    {
        ShowModal = false;
        await CloseModal.InvokeAsync(ShowModal);
    }

    async void Cancel()
    {
        ShowModal = false;
        await CloseModal.InvokeAsync(ShowModal);
    }
}