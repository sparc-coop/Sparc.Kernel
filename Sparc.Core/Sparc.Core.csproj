<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net6.0-android</TargetFrameworks>
    <Nullable>enable</Nullable>
    <Version>6.3.1</Version>
    <LangVersion>10.0</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

	  <Authors>Joseph Young</Authors>
	  <Company>Sparc Cooperative</Company>
	  <Description>Sparc Core package</Description>
	  <PackageIcon>icon.png</PackageIcon>
	  <PackageTags>Core;Sparc</PackageTags>
	  <PackageProjectUrl>https://github.com/sparc-coop/Sparc.Kernel</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/sparc-coop/Sparc.Kernel</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

	<ItemGroup>
		<None Include="Files\icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="readme.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
